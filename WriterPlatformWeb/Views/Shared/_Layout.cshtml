<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg header d-flex justify-content-between">
                <a asp-action="Index" asp-controller="Home">
                    <div class="navbar-brand">
                        <img src="/img/main_logo.png" alt="Logo">
                    </div>
                </a>
                <div class="separator"></div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="nav-link custom-fonts">Магазин</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="PublishWorkForm" asp-controller="Work" class="nav-link custom-fonts">Опубликовать</a>
                        </li>
                    </ul>
                </div>
                <ul class="navbar-nav ml-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item" style="margin-right: 30px;">
                            <a asp-action="Login" asp-controller="User" class="btn btn-outline-light">Войти</a>
                        </li>
                    }
                    <li class="nav-item" style="margin-right:10px;">
                        <a asp-action="Settings" asp-controller="Settings">
                            <img src="/img/user_icon.png" alt="User Icon" style="width: 30px; height: 30px;">
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <form asp-action="Logout" asp-controller="User" method="post" style="margin-left: 30px;">
                            <button type="submit" class="btn btn-outline-light">Выйти</button>
                        </form>
                    }
                </ul>
            </nav>
        </header>

        <div>
            @RenderBody()
        </div>
    </body>
</html>