@using WriterPlatformWeb.Models.ViewModel.Work;
@model PaginatedTextViewModel;


<div class="container">
    <div class="reading-form custom-fonts mt-4 mx-auto" style="max-width: 600px;">
        <div class="text-center mt-4">
            <img src="/img/main_logo.png" alt="Logo" style="width: 170px; height: auto;">
            <h2 class="custom-fonts mt-3">Чтение произведения</h2>
        </div>

        <div class="form-group mt-3">
            <label for="WorkText" class="custom-fonts">Текст:</label>
            <p class="form-control-plaintext custom-fonts form-control" id="WorkText">@Model.Text</p>
        </div>

        <nav aria-label="Page navigation example" class="mt-4">
            <ul class="pagination justify-content-center custom-fonts">
                <li class="page-item @((Model.CurrentPage == 1) ? "disabled" : "")">
                    <a class="page-link" asp-action="ReadText" asp-controller="Work" asp-route-id="@Model.WorkId" asp-route-page="@(Model.CurrentPage - 1)" tabindex="-1">Предыдущая</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="ReadText" asp-controller="Work" asp-route-id="@Model.WorkId" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @((Model.CurrentPage == Model.TotalPages) ? "disabled" : "")">
                    <a class="page-link" asp-action="ReadText" asp-controller="Work" asp-route-id="@Model.WorkId" asp-route-page="@(Model.CurrentPage + 1)">Следующая</a>
                </li>
            </ul>
        </nav>
    </div>
</div>