@using WriterPlatformWeb.Models.ViewModel.Work;
@model IEnumerable<WorkViewModel>;

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg header">
                <a asp-action="Index" asp-controller="Home">
                    <div class="navbar-brand">
                        <img src="./img/main_logo.png" alt="Logo">
                    </div>
                </a>
                <div class="separator"></div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="nav-link custom-fonts">Магазин</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-action="PublishWorkForm" asp-controller="Work" class="nav-link custom-fonts">Опубликовать</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a asp-action="Register" asp-controller="User">
                                <img src="./img/user_icon.png" alt="User Icon" style="width: 30px; height: 30px;">
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <div class="main-content">
            <div class="css-1s8sirz">
                <div class="test_class_left">
                    <div class="search-container">
                        <div class="css-g5baae">
                            <img src="./img/magnifying_icon.png" alt="Search Icon" class="search-icon" />
                            <div class="css-qdcmcm">
                                <div class="css-trzy6k">
                                    <input class="custom-fonts" type="text" placeholder="Искать в магазине" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="test_class_left">
                        <div class="body-items">
                            <a asp-action="Index" asp-controller="Home" class="custom-fonts">Главная</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="book-collection-section">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                    @foreach (var work in Model)
                    {
                        <div class="col">
                            <div class="card h-100">
                                <img src="./img/default-book-cover.png" class="card-img-top" alt="Обложка книги">
                                <div class="card-body">
                                    <h5 class="card-title">@work.Title</h5>
                                    <p class="card-text">Автор: @work.AuthorName</p>
                                    <p class="card-text">Рейтинг: @work.AverageRating</p>
                                </div>
                                <div class="card-footer">
                                    <a asp-action="GetWorkDetails" asp-controller="Work" asp-route-id="@work.WorkId" class="btn btn-primary">Подробнее</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </body>
</html>
